<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.comments() %>">comments</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of comment</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New comment', pathTo.new_comment(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <% if (comments.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% comments.forEach(function (comment) { %>
                <tr>
                    <td><strong><%- link_to('comment #' + comment.id, pathTo.comment(comment)) %></strong></td>
                    <td>

                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No comments were found.</strong>
        </p>
        <% } %>
    </div>
</div>
