
<ul class="breadcrumb">
    <li><a href="/"><%= t('locale.home') %></a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.users() %>"><%= t('users_controller_client.users') %></a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1><%= t('users_controller_client.action_index_title') %></h1> 
</div>

<div class="row">
    <div class="col-md-12">
        <% if (users.length > 0) { %>
        <table class="table table-striped sortable">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>name</th>
                    <th>email</th>
                    <th>created</th>
                    <th>language</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function (user) { %>
                <tr>
                    <td><strong><%- link_to('user #' + user.id, pathTo.user(user)) %></strong></td>
                    <td> <%= user.name %> </td>
                    <td> <%= user.email %> </td>
                    <td> <%= user.created %> </td>
                    <td> <%= user.language %> </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No users were found.</strong>
        </p>
        <% } %>
    </div>
</div>
