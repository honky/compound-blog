<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.admin_pages() %>">pages</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of page</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New page', pathTo.new_admin_page(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <% if (pages.length > 0) { %>
        <table class="table table-striped sortable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% pages.forEach(function (page) { %>
                <tr>
                    <td><strong><%- link_to('page #' + page.id, pathTo.admin_page(page)) %></strong></td>
                    <td>
                        <%- link_to('<i class="icon-edit"></i> Edit', pathTo.edit_admin_page(page), {class: 'btn btn-mini'}) %>
                        <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.admin_page(page), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No pages were found.</strong>
        </p>
        <% } %>
    </div>
</div>
