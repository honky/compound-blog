<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.admin_comments %>">comments</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of comment</a></li>
</ul>

<div class="page-header">
    <h1>Details of comment</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>title</th><td><%= comment.title %></td></tr>

        <tr><th>content</th><td><%= comment.content %></td></tr>

        <tr><th>createdAt</th><td><%= comment.createdAt %></td></tr>

        <tr><th>createdBy</th><td><%= comment.createdBy %></td></tr>

        <tr><th>modifiedAt</th><td><%= comment.modifiedAt %></td></tr>

        <tr><th>modifiedBy</th><td><%= comment.modifiedBy %></td></tr>

        <tr><th>isPublic</th><td><%= comment.isPublic %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_admin_comment(comment), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.admin_comment(comment), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.admin_comments) %>
</div>
