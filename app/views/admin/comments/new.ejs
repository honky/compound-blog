<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.admin_comments() %>">comments</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">New comment</a></li>
</ul>

<div class="page-header">
    <h1>New comment</h1>
</div>

<% var form = formFor(comment, {action: pathTo.admin_comments(), method: 'POST', id: "comment-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Create comment', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.admin_comments(), {class: 'btn'}) %>
</div>
<%- form.end() %>
